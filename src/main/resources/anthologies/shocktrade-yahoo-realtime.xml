<?xml version="1.0" ?>
<anthology id="Yahoo Real-time Quotes" version="1.0">

    <!-- Schedules -->

    <schedule id="PeriodicSchedule" class="com.shocktrade.datacenter.schedules.PeriodicSchedule"/>
    <schedule id="ScheduleOnce" class="com.ldaniels528.broadway.core.triggers.schedules.ScheduleOnce"/>
    <schedule id="TradingSchedule" class="com.shocktrade.datacenter.schedules.USStockMarketSchedule"/>

    <!-- Narratives -->

    <narrative id="YahooRealTimeQuotesNarrative"
               class="com.shocktrade.datacenter.narratives.stock.yahoo.YahooRealTimeQuotesNarrative">
        <properties>
            <property key="kafka.topic">yahoo.quotes.realtime.avro</property>
            <property key="mongo.database">shocktrade</property>
            <property key="mongo.replicas">dev801:27017,dev802:27017,dev803:27017</property>
            <property key="mongo.collection">Stocks</property>
            <property key="zookeeper.connect">dev801:2181</property>
        </properties>
    </narrative>

    <narrative id="YahooRealTimeToMongoDBNarrative"
               class="com.shocktrade.datacenter.narratives.stock.yahoo.YahooRealTimeToMongoDBNarrative">
        <properties>
            <property key="kafka.topic">yahoo.quotes.realtime.avro</property>
            <property key="mongo.database">shocktrade</property>
            <property key="mongo.replicas">dev801:27017,dev802:27017,dev803:27017</property>
            <property key="mongo.collection">Stocks</property>
            <property key="zookeeper.connect">dev801:2181</property>
        </properties>
    </narrative>

    <!-- Triggers -->

    <trigger
            schedule-ref="TradingSchedule"
            narrative-ref="YahooRealTimeQuotesNarrative"/>

    <trigger
            schedule-ref="PeriodicSchedule"
            narrative-ref="YahooRealTimeToMongoDBNarrative"/>

</anthology>